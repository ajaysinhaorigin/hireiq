datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Job {
  id        String   @id @default(cuid())
  title     String
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime @default(now())
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  jobs      Job[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
