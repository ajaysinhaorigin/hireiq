model Company {
  id          String   @id @default(uuid())
  name        String
  website     String?
  description String?
  location    String?

  employees   User[]   @relation("EmployeeCompany")

  recruiter   User?    @relation("CompanyRecruiter", fields: [recruiterId], references: [id])
  recruiterId String?  @unique

  jobs        Job[]
  createdAt   DateTime @default(now())
}
